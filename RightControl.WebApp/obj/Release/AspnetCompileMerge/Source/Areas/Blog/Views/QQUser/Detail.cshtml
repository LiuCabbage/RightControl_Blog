@model RightControl.Model.QQUserModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDetail.cshtml";
}

<div class="layui-col-md12">
    <table class="layui-table" lay-skin="line">
        <tbody>
            <tr>
                <td>ID：</td>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <td>OpenId：</td>
                <td>@Model.OpenId</td>
            </tr>
            <tr>
                <td>昵称：</td>
                <td>@Model.NickName</td>
            </tr>
            <tr>
                <td>性别：</td>
                <td>@(Model.Gender == 1 ? "男" : "女")</td>
            </tr>
            <tr>
                <td>头像：</td>
                <td>@Model.HeadShot</td>
            </tr>
            <tr>
                <td>邮箱：</td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td>状态：</td>
                <td>@(Model.Status == true ? "启用" : "停用")</td>
            </tr>
            <tr>
                <td>最后一次登录时间：</td>
                <td>@Model.LastLogin</td>
            </tr>
            <tr>
                <td>创建时间：</td>
                <td>@Model.CreateOn</td>
            </tr>
        </tbody>
    </table>
</div>

